@model Jogador

<input asp-for="Id" />
<div class="mb-3">
    <label asp-for="Nome" class="form-label"></label>
    <input asp-for="Nome" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Idade" class="form-label"></label>
    <input asp-for="Idade" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Nacionalidade" class="form-label"></label>
    <input asp-for="Nacionalidade" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Nascimento" class="form-label"></label>
    <input asp-for="Nascimento" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Posicao" class="form-label"></label>
    <select class="form-control" asp-for="Posicao" asp-items="@Html.GetEnumSelectList<Posicao>()">
        <option>Selecione</option>
    </select>
</div>
<div class="mb-3">
    <label asp-for="LigaDisputada" class="form-label"></label>
    <select class="form-control" asp-for="LigaDisputada" asp-items="@ViewBag.LigaDisputada">
        <option>Selecione</option>
    </select>
</div>
<div class="mb-3">
    <label asp-for="Lesionado" class="form-label"></label>
    <input asp-for="Lesionado" type="checkbox" />
</div>